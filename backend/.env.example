# ===========================================
# Leksihjelp Backend — Environment Variables
# ===========================================
# Copy this file to .env and fill in your values.
# For local development, you only need ELEVENLABS_API_KEY
# and SESSION_JWT_SECRET. Everything else is optional.

# --- TTS (Text-to-Speech) ---
# Get a free API key at https://elevenlabs.io
ELEVENLABS_API_KEY=your_elevenlabs_api_key_here

# Legacy access code for TTS (set any value for testing)
ACCESS_CODE=your_access_code_here

# --- Session / Auth ---
# Generate with: openssl rand -hex 32
SESSION_JWT_SECRET=your_session_jwt_secret_here

# Your site URL (use http://localhost:3000 for local development)
SITE_URL=http://localhost:3000

# --- Stripe (yearly card payments) ---
# Get test keys at https://dashboard.stripe.com/test/apikeys
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key_here
STRIPE_WEBHOOK_SECRET=whsec_your_stripe_webhook_secret_here

# --- Vipps MobilePay (Norwegian mobile payments) ---
# Get credentials at https://portal.vippsmobilepay.com
VIPPS_CLIENT_ID=your_vipps_client_id_here
VIPPS_CLIENT_SECRET=your_vipps_client_secret_here
VIPPS_SUBSCRIPTION_KEY=your_vipps_subscription_key_here
VIPPS_MERCHANT_SERIAL_NUMBER=your_merchant_serial_number_here
VIPPS_API_BASE=https://apitest.vipps.no
VIPPS_WEBHOOK_SECRET=your_vipps_webhook_secret_here

# --- Firebase (user database) ---
# Get credentials from Firebase Console → Project Settings → Service Accounts
FIREBASE_PROJECT_ID=your_firebase_project_id_here
FIREBASE_CLIENT_EMAIL=your_firebase_client_email_here
FIREBASE_PRIVATE_KEY=your_firebase_private_key_here

# --- Cron jobs ---
# Protects cron endpoints from unauthorized access
CRON_SECRET=your_cron_secret_here
