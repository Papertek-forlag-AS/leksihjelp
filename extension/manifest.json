{
  "manifest_version": 3,
  "name": "Leksihjelp",
  "version": "1.5.1",
  "description": "Ordbok, uttale og ordforslag for norske elever som lærer spansk, fransk eller tysk.",
  "permissions": [
    "contextMenus",
    "storage",
    "identity"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "background": {
    "service_worker": "background/service-worker.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "css": ["styles/content.css"],
      "js": [
        "content/floating-widget.js",
        "content/word-prediction.js"
      ],
      "run_at": "document_idle",
      "all_frames": true,
      "match_origin_as_fallback": true
    }
  ],
  "action": {
    "default_popup": "popup/popup.html",
    "default_icon": {
      "16": "assets/icon-16.png",
      "48": "assets/icon-48.png",
      "128": "assets/icon-128.png"
    }
  },
  "icons": {
    "16": "assets/icon-16.png",
    "48": "assets/icon-48.png",
    "128": "assets/icon-128.png"
  },
  "web_accessible_resources": [
    {
      "resources": ["data/*.json", "assets/*", "audio/*/*.mp3"],
      "matches": ["<all_urls>"]
    }
  ],
  "commands": {
    "lookup-selection": {
      "suggested_key": {
        "default": "Ctrl+Shift+D",
        "mac": "Command+Shift+D"
      },
      "description": "Slå opp markert tekst i Leksihjelp"
    },
    "read-selection": {
      "suggested_key": {
        "default": "Ctrl+Shift+S",
        "mac": "Command+Shift+S"
      },
      "description": "Les opp markert tekst med Leksihjelp"
    },
    "toggle-pause": {
      "suggested_key": {
        "default": "Ctrl+Shift+P",
        "mac": "Command+Shift+P"
      },
      "description": "Sett Leksihjelp på pause / gjenoppta"
    }
  }
}
